	작성자 : 김보영 

-->

<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	
<mapper namespace="category">
	
	<select id="selectCatLargeList" resultType="catLargeVO" parameterType="catLargeVO">
		SELECT C_LARGECAT, C_NAME
		FROM CAT_LARGE
	</select>
	
	<select id="selectCatMiddleList" resultType="catMiddleVO" parameterType="catMiddleVO">
		SELECT b.c_name,
			   a.C_LARGECAT,
			   b.C_MIDDLECAT
		FROM CAT_LARGE a RIGHT JOIN CAT_MIDDLE b	
		ON a.C_LARGECAT = b.C_LARGECAT
		ORDER BY C_MIDDLECAT
	</select>
	
 </mapper> 
	


 
