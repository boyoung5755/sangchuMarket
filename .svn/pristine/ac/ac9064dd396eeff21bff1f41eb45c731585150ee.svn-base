package sangchu.adminMode.controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import sangchu.adminMode.service.AdminModeServiceImpl;
import sangchu.adminMode.service.IAdminModeService;
import sangchu.adminMode.vo.EnquiryVO;

@WebServlet("/getOneEnquiry.do")
public class GetOneEnquiry extends HttpServlet {
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
	
		int eNo = Integer.parseInt(request.getParameter("eNo"));
		
		IAdminModeService service = AdminModeServiceImpl.getInstance();
		EnquiryVO enquiryVO = service.getEnquiry(eNo);
		
		request.setAttribute("vo", enquiryVO);
		request.getRequestDispatcher(request.getContextPath() + "/WEB-INF/jsp/getOneEnquiry.jsp").forward(request, response);
	
	}

	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		doGet(request, response);
	}

}
