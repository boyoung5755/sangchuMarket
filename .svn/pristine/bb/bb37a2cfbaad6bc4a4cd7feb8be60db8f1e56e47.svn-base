  //유저 한명의 정지일 해제
  function clearStopdate(){
	var answer = confirm('정말 이 사용자의 정지일을 해제하시겠습니까?');
	if(answer){
	  var row = $(this).closest('tr'); //클릭된 버튼이 속한 행
	  var email = row.find('td:eq(0)').text().trim();
	  
	  $.ajax({
			 url: "<%=request.getContextPath()%>/clearStopdate.do",
			 type : 'get',
			 dataType : 'json',
			 data : {"email" : email},
			 success : function(res){
				 if(res.sw=="성공"){
					alert("정지 해제 완료")
					$('#listCotent').empty();
				 }else{ //삭제 실패
					alert("정지 해제 실패")
				 }
			 },
			 error : function(xhr){
				 alert("오류 : " + xhr.status)
			 }
		 })
	}
  }
    </script>

