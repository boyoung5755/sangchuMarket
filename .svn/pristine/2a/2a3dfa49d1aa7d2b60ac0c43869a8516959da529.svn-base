<html lang="ko">
<head>
<meta charset="UTF-8">
<title>마이페이지 메인 기본값</title>
<script src="<%=request.getContextPath()%>/js/jquery/jquery-3.7.0.min.js"></script>
<script>
	$(function(){
		// 등록 상품 버튼
		$('#regproduct').on('click',function(){
			$('#subcontent').empty();
			$('#subcontent').load("<%=request.getContextPath()%>/regProductList.do");
		});
		
		// 거래이력 버튼
		$('#tradelog').on('click',function(){
			$('#subcontent').empty();
			$('#subcontent').load("<%=request.getContextPath()%>/");
		});
		
		// 찜목록 버튼
		$('#jjimlist').on('click',function(){
			$('#subcontent').empty();
			$('#subcontent').load("<%=request.getContextPath()%>/");
		});
		
		// 상추톡 버튼
		$('#sangchutalk').on('click',function(){
			$('#subcontent').empty();
			$('#subcontent').load("<%=request.getContextPath()%>/openSangchuTalk.do");
		});
		
		// 거래후기 버튼
		$('#scoreboard').on('click',function(){
			$('#subcontent').empty();
			$('#subcontent').load("<%=request.getContextPath()%>/");
		});
		
		$('#regproduct').trigger('click');
	});
</script>
</head>
<style>

	#nickname {
		display : inline-block;
	}
	#update-nickname, #nickname{
		vertical-align: top;
		margin-top : 10px;
	}
	.rounded-circle {
	    border-radius: 50%!important;
	    display : inline-block;
	    width : 200px;
	    height : 200px;
	}
	.logo {
		width : 20px;
		heigth : 20px;
	}
	.btn {
	    display: inline-block;
	    font-weight: 400;
	    text-align: center;
	    white-space: nowrap;
	    vertical-align: middle;
	    user-select: none;
	    border: 1px solid transparent;
	    transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
	    float : left;
	}
	.btn-secondary {
	    color: #fff;
	    background-color: #6c757d;
	    border-color: #6c757d;
	}
	.btn-group-lg>.btn, .btn-lg {
	    padding: 0.5rem 1rem;
	    font-size: 1.25rem;
	    line-height: 1.5;
	    border-radius: 0.3rem;
	}
	.btn-group>.btn {
    	position: relative;
		width : 20%;
		margin : 0px;
	}
	.btn-group>.btn:first-child {
    	margin-left: 0;
	}
	.btn-group .btn+.btn{
		margin-left: -1px;
	}
	div.row {
		width : 100%;
	}
	.row>* {
		width : 100%;
	}
	.btn-group {
		width : 100%;
	}
	.btn:not(:disabled):not(.disabled) {
    	cursor: pointer;
	}
	.container-fluid-mypagedefault {
		width : 100%;
	}
	#subcontent {
		
	}
	.btn-group btn-group-lg{
		height : 50px;
	}
</style>
<body>
<%
	/* 로그인 유저의 정보를 이곳에서 풀어헤친다!! */
	session.getAttribute("");
%>
	<div class="container-fluid-mypagedefault">
		<div class="row">
			<table>
				<tr>
					<td rowspan="2">
						<!--
							이 부분 이미지는 이미지 테이블에서 회원이미지가 있는지 판단하고 있으면 해당 이미지,
							없다면 가지고있는 기본 이미지로 출력
						-->
						<img alt="회원이미지" src="https://www.layoutit.com/img/sports-q-c-140-140-3.jpg" class="rounded-circle">
					</td>
					<td colspan="3">
						<h4>닉네임</h4>
					</td>
					<td>
						<button type="button" class="" id="update-nickname">
							닉네임 수정
						</button>
					</td>
				</tr>
				<tr>
					<td>
						<img class="logo" alt="Bootstrap Image Preview" src="https://www.layoutit.com/img/sports-q-c-140-140-3.jpg"> 판매수 &nbsp;&nbsp;&nbsp; 000 건
					</td>
					<td>
						<img class="logo" alt="Bootstrap Image Preview" src="https://www.layoutit.com/img/sports-q-c-140-140-3.jpg"> 구매수 &nbsp;&nbsp;&nbsp; 000 건
					</td>
					<td>
						내 상추 <a href=""><img class="logo" alt="Bootstrap Image Preview" src="https://www.layoutit.com/img/sports-q-c-140-140-3.jpg"></a>
					</td>
					<td></td>
				</tr>
			</table>
		</div>
		<div class="btn-group btn-group-lg" role="group">
			<button class="btn btn-secondary" type="button" id="regproduct">
				등록상품
			</button> 
			<button class="btn btn-secondary" type="button" id="tradelog">
				거래이력
			</button> 
			<button class="btn btn-secondary" type="button" id="jjimlist">
				찜 목록
			</button> 
			<button class="btn btn-secondary" type="button" id="sangchutalk">
				상추톡
			</button> 
			<button class="btn btn-secondary" type="button" id="scoreboard">
				거래후기
			</button>
		</div>
		<div id="subcontent">
		</div>
	</div>
</body>
</html>