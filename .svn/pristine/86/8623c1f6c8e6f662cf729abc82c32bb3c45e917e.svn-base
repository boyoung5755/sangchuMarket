<%@page import="sangchu.main.vo.MemberVO"%>
<%@page import="sangchu.adminMode.vo.EnquiryVO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
</head>

<%
MemberVO svo= (MemberVO)session.getAttribute("memVO");
if(svo==null){
	out.println("<script>location.href='"+request.getContextPath()+"/loginsessionError.do'</script>");
}

EnquiryVO vo = (EnquiryVO)request.getAttribute("vo"); %>
<script src="<%=request.getContextPath()%>/js/jquery/jquery-3.7.0.min.js"></script>
<script>
		
		function closeWindow(){
			$('#content').empty().load('<%=request.getContextPath()%>/reportUsers.do');
		}
	
	
		
		function setStopdate(){
			var inputdate = $('#date').val();
				$.ajax({
					url :  "<%=request.getContextPath()%>/setStopdate.do",
					type	: 'get',
					dataType: 'json',
					data : {
						"target" : "<%=vo.getE_target()%>",
						"inputdate" 	: inputdate
					},
					success : function(res){
						if(res.sw=="성공"){
						alert('회원정지일이 저장되었습니다.');
						$('#content').empty().load('<%=request.getContextPath()%>/reportUsers.do');
						$(this).closest('tr').attr('id', 'completed');
						}else{
							alert('회원정지일 저장 실패')	
						}
					}, 
					error : function(xhr){
						alert("상태 : " + xhr.status)
					}
					
				})//ajax 끝
		}//setSopdate function 끝
	
</script>

	<style>
    /* Google web font CDN*/
    @import url('https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@100;300;400;500;700&display=swap');

    * {
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: normal;
    }
    .cont{
        margin: 10px;
      
    }

  

.board_view {
    width: 900px;
    margin: 50px auto;
}

.board_view .title {
    padding: 20px 15px;
    border-bottom: 1px dashed #ddd;
    font-size: 1.2rem;
}

.board_view .info {
    padding: 15px;
    border-bottom: 1px solid #999;
}

.board_view .info dl {
    position: relative;
    display: inline-block;
    padding: 0 20px;
}

.board_view .info dl:first-child {
    padding-left: 0;
}

.board_view .info dl::before {
    content: "";
    position: absolute;
    top: 1px;
    left: 0;
    display: block;
    width: 1px;
    height: 15px;
    background: #ddd;
}

.board_view .info dl:first-child::before {
    display: none;
}

.board_view .info dl dt,
.board_view .info dl dd {
    display: inline-block;
}

.bt_wrap{
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}
.bt_wrap input{
    font-family: 'Noto Sans KR', sans-serif;
    height: 35px;
    width: 200px;
    margin-right: 3px;
    text-align: center;
}

.bt_wrap button{
    font-family: 'Noto Sans KR', sans-serif;
    height: 40px;
    width: 70px;
    margin-right: 30px;
    cursor: pointer;
}
</style>

	
<body>
    <div class="board_wrap">
        <div class="board_view_wrap">
            <div class="board_view">
                <div class="title">
                    신고번호 : <%=vo.getE_no() %>
                </div>
                <div class="info">
                    <dl>
                        <dt>신고자</dt>
                        <dd><%=vo.getEmail()%></dd>
                    </dl>
                    <dl>
                        <dt>신고대상자</dt>
                        <dd><%=vo. getE_target()%></dd>
                    </dl>
                </div>
                <div class="cont">
                    	<%=vo.getE_accuser() %>
                </div>
            </div>
            <div class="bt_wrap">
                <div><input id="date" type="text" onKeyup="this.value=this.value.replace(/[^0-9]/g,'')" maxlength="8" placeholder="정지날짜입력 ex)20230102"></div>
                <div><button id="save"  type="button"onclick="setStopdate()">정지일 저장</button></div>                
            	 <div><button type="button" id="close" onclick="closeWindow()">닫기</button></div>
            </div>
        </div>
    </div>
</body>


</html>
