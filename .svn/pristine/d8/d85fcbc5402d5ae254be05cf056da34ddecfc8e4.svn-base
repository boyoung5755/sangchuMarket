<script type="text/javascript">
function lCategory(){
	
	$.ajax({
		
		url : "<%= request.getContextPath()%>/lCatList.do",
		type : 'get',
		dataType : 'json',
		success : function(res){
			
			
			code = "";
					
			$.each(res, function(i,v){
				/* code += "<p class='" + this.id + "'>" + this.name + "</p>" */
			  code += `<option value='${this.id}'>${this.name}</p>`
			
			})
			
			$('#names').html(code);
		},
		error : function(xhr){
			alert("상태 : " + xhr.status);
		}
	})
}
</script>

