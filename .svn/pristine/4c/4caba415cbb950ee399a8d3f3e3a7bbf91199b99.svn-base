<%@page import="sangchu.main.vo.MemberVO"%>
<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<!DOCTYPE html>
<html lang="ko">
<head>
<meta charset="UTF-8">
<title>거래기록..</title>
<!--
	최초 작성자 : 김석호
	최초 작성일 : 2023.08.12 13:03
	
	최근 수정자 : 김석호
	최근 수정일 : 2023.08.12 13:03
	
	미완성
	
	수정 내역
	
	마이페이지 우측 기본페이지 하단 거래이력 버튼을 눌렀을 때 출력하는 화면입니다.
 -->
<% MemberVO vo = (MemberVO) session.getAttribute("memVO");
	if(vo==null){
	    out.println("<script>location.href='"+request.getContextPath()+"/loginsessionError.do'</script>");
	}
	String email = vo.getEmail();
%>
</head>
<body>
	<div id="tradeLog">
	</div>
</body>
<script>
	/* 출력문 만드는 위치 $('#subcontent') */
	$(function(){
		$.ajax({
			url : "<%=request.getContextPath()%>/jjimList.do",
			data : "email=<%=email%>",
			dataType : 'json',
			success : function(res){
				var tlogcode = "";
				if(res.sw=="ok"){
					$.each(res.datas,function(i,v){
						if(v.t_state=="0"){
							tlogcode += '<div class="col-lg-3 col-md-4 col-sm-6 pb-1"><a class="text-decoration-none" href="<%=request.getContextPath()%>/';
							tlogcode += '"><div class="cat-item d-flex align-items-center mb-4"><div class="overflow-hidden" style="width: 100px; height: 100px;"><img class="img-fluid" src="<%=request.getContextPath()%>/productImageView.do?src=';
							tlogcode += v.t_no+'" alt="이미지가없어요..?"></div><div class="flex-fill pl-3"><h6>';
							tlogcode += '</h6><small class="text-body">';
							tlogcode += v.tb_title+'</small>';
							tlogcode += '</div></div></a></div>';
						}
					});
				}else{
					tlogcode += '<h4>찜한 상품이 없습니다</h4>';
				}
				if(tlogcode==""){
					tlogcode += '<h4>찜한 상품이 없습니다</h4>';
				}
				$('#jjimList').append(tlogcode);
			},
			error : function(xhr){
				alert('오류 : '+xhr.status);
			},
			type : 'post'
		});
	});
	
	
	
</script>
</html>