	@Override
	public List<TBoardVO> selectTBoard(String mid) {
		List<TBoardVO> list=null;
		try { 
			sql=MybatisUtil.getSqlSession();
			list = sql.selectList("tboard.selectTBoard", mid);
		}catch(Exception e){
			e.printStackTrace();
		} finally {
			if(sql!=null) sql.commit();
			if(sql!=null) sql.close();
		}
		return list;
	}
	
	
	

