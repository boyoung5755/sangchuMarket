    .logo {
        width: 40px;
        height: 40px;
        margin-right: 10px;
    }

    ul {
        list-style: none;
    }

    li {
        margin-top: 7px;
    }

    a {
        text-decoration: none;
        color: #000;
    }

    .div1_marketInfo {
        flex: 4;
        margin-right: 10px;

    }

    .div2_nav {
        flex: 2;
        padding-left: 30px;
    }

    .div3_termsInfo {
        flex: 1.5;
        
    }

    .div4_SNSIcon {
        flex: 2.5;
        display: flex;
    }

    .SNSIcon img{
        width: 65px;
        height: 65px;
        margin-right: 10px;
    }
</style>

